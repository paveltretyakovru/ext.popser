{
	"manifest_version" 	: 2 ,
	
	"name" 				: "Popser!" ,
	"version"			: "1.0" 	,
	"description"		: "Расширение для создания закладок Ваших любимых сериалов. Имейте быстрый доступ к пометке сезона и серии просматриваемых Вами сериалов!" ,

	"browser_action"	: {
		"default_title" : "Popser!" 			, 
		"default_icon" 	: "images/popcorn.png"	,
		"default_popup" : "popup.html"
	} ,

	"permissions" : [
		"activeTab" 	,
		"http://back.popser.app/*" 	,
		"https://maxcdn.bootstrapcdn.com/*" ,
		"cookies" ,
		"fontSettings"
	] ,

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}